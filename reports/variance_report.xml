<?xml version="1.0"?>
<openerp>
    <data>
        <template id="report_stock_variance">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="report.external_layout">
                        <div class="page">
                            <br/>

                            <div class="header" style="text-align:center; margin-top: 100px;">
                                <h1>
                                    <strong>
                                        <u>Stock Variance Report</u>
                                    </strong>
                                </h1>
                            </div>
                        
                            <div class="row mt32 mb32">
                                <div name="name" class="col-md-12">
                                    <strong>
                                        Inventory Name:
                                    </strong>
                                    <span t-field="o.inventory_id"/>
                                </div>
                                <div name="location" class="col-md-12">
                                    <strong>
                                        Inventoried Location:
                                    </strong>
                                    <span t-field="o.location_id"/>
                                </div>
                                <div name="date" class="col-md-12">
                                    <strong>
                                        Inventory Date:
                                    </strong>
                                    <span t-field="o.inventory_id.date"/>
                                </div>
                            </div>
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Theoretical Qty</th>
                                        <th>Real Qty</th>
                                        <th>Variance</th>
                                    </tr>
                                </thead>
                            
                                <tbody class="sale_tbody">
                                    
                                    <td>
                                        <span t-field="o.product_id"/>
                                    </td>
                                    <td>
                                        <span t-field="o.theoretical_qty"/>
                                    </td>
                                    <td>
                                        <span t-field="o.product_qty"/>
                                    </td>
                                    <td>
                                        <span t-field="o.variance"/>
                                    </td>
                                    
                                </tbody>               
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <report
            id="variance_report"
            model="stock.inventory.line"
            string="Stock Variance Report"
            report_type="qweb-pdf"
            name="stock_take_variance.report_stock_variance"
            file="stock_take_variance.report_stock_variance"
            auto="False"
        />
    </data>
</openerp>
